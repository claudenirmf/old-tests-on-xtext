module br.ufes.inf.nemo.ontol.GenerateOntoL

import org.eclipse.xtext.xtext.generator.*
import org.eclipse.xtext.xtext.generator.model.project.*
import org.eclipse.emf.mwe.utils.StandaloneSetup

var rootPath = ".."
var rs = org.eclipse.xtext.resource.XtextResourceSet {} //:theResourceSet {}

Workflow {
	
	bean = StandaloneSetup {
		scanClassPath = true
		platformUri = "${rootPath}/.."
		resourceSet = rs
		registerGeneratedEPackage = "br.ufes.inf.nemo.ontol.model.ModelPackage"
		uriMap = {
			from = "http://www.eclipse.org/emf/2011/Xcore"
			to = "classpath:/"
		}
	}
	
	component = XtextGenerator {
		configuration = {
			project = StandardProjectConfig {
				baseName = "br.ufes.inf.nemo.ontol"
				rootPath = rootPath
				runtimeTest = {
					enabled = true
				}
				eclipsePlugin = {
					enabled = true
				}
				eclipsePluginTest = {
					enabled = true
				}
				createEclipseMetaData = true
			}
			code = {
				encoding = "UTF-8"
				fileHeader = "/*\n * generated by Xtext \${version}\n */"
			}
		}
		language = StandardLanguage {
			name = "br.ufes.inf.nemo.ontol.OntoL"
			fileExtensions = "ontol"
			resourceSet = rs
			referencedResource = "platform:/resource/br.ufes.inf.nemo.ontol.model/model/ontol.xcore"

			serializer = {
				generateStub = false
			}
			validator = {
				// composedCheck = "org.eclipse.xtext.validation.NamesAreUniqueValidator"
			}
		}
	}
}
